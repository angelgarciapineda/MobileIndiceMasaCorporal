<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileIndiceMasaCorporal.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Calculadora IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Calcula tu Indice de Masa Corporal" FontSize="Large"  Padding="30,10,30,10"/>
        <Entry Placeholder="Altura" x:Name="Altura" Keyboard="Numeric"/>
        <Entry Placeholder="Peso" x:Name="Peso" Keyboard="Numeric"/>
        <Entry Placeholder="tu IMC" x:Name="IMC" IsEnabled="False"/>
        <Button Text="Calcular" Clicked="Button_Clicked"/>
    </StackLayout>

</ContentPage>
